html(lang="en")
  head
    title:KnowledgeBase 
    //- link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous")
    link(rel='stylesheet',href='/bower_components/bootstrap/dist/css/bootstrap.css')
    link(rel='stylesheet',href='/css/style.css')
  body
    nav.navbar.navbar-expand-lg.navbar-dark.bg-dark(aria-label='Fifth navbar example').mb-2
      .container
        a.navbar-brand(href='/') KnowledgeBase
        button.navbar-toggler(type='button' data-bs-toggle='collapse' data-bs-target='#navbarsExample05' aria-controls='navbarsExample05' aria-expanded='false' aria-label='Toggle navigation')
          span.navbar-toggler-icon
        #navbarsExample05.collapse.navbar-collapse
          ul.navbar-nav.me-auto.mb-2.mb-lg-0
            li.nav-item
              a.nav-link.active(aria-current='page' href='/') Home
            if user 
              li.nav-item
                a.nav-link(href='/articles/new') Add article
          ul.navbar-nav.narbar-right 
            if user 
              li.nav-item 
                a.nav-link(href='/users/logout') Logout
            else
              li.nav-item 
                a.nav-link(href='/users/register') Register
              li.nav-item
                a.nav-link(href='/users/login') Login              
    .container
      != messages('message', locals) 
      if errors
        each error,i in errors
          div(class="alert alert-danger")  #{error}
      block  content
      br
      hr
      footer 
        p Copyright&copy;2023
    script(src="/bower_components/jquery/dist/jquery.js")
    script(src="/bower_components/bootstrap/dist/js/bootstrap.js")
    script(src="/js/main.js")